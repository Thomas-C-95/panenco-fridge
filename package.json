{
	"name": "node-course-template",
	"version": "1.0.0",
	"description": "",
	"main": "src/server.ts",
	"scripts": {
		"lint": "standard",
		"lint:fix": "standard --fix",
		"format": "prettier --write .",
		"build": "swc src --out-dir build",
		"build:clean": "rm -rf build && pnpm run build",
		"watch": "swc src -d build --watch",
		"start": "node build/server.js",
		"dev": "concurrently 'pnpm run watch' 'node --watch build/server.js'",
		"test": "SWCRC=true NODE_OPTIONS='--loader @swc-node/register/esm' mocha ./src/tests/**/*.test.ts"
	},
	"type": "module",
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@swc-node/register": "^1.6.7",
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.87",
		"@swc/helpers": "^0.5.2",
		"@types/chai": "^4.3.6",
		"@types/express": "^4.17.17",
		"@types/mocha": "^10.0.1",
		"@types/node": "18.16.19",
		"@types/supertest": "^2.0.12",
		"chai": "^4.3.8",
		"chokidar": "^3.5.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"concurrently": "^8.2.1",
		"mocha": "^10.2.0",
		"prettier": "^3.0.0",
		"standard": "^17.1.0",
		"supertest": "^6.3.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"@mikro-orm/cli": "^5.8.3",
		"@mikro-orm/core": "^5.8.3",
		"@mikro-orm/migrations": "^5.8.3",
		"@mikro-orm/postgresql": "^5.8.3",
		"@panenco/papi": "^1.6.0",
		"class-validator-jsonschema": "^5.0.0",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"routing-controllers": "^0.10.4",
		"routing-controllers-openapi": "^4.0.0",
		"swagger-ui-express": "^5.0.0",
		"typings": "link:@mikro-orm/core/typings",
		"uuid": "^9.0.1"
	},
	"pnpm": {
		"patchedDependencies": {
			"class-transformer@0.5.1": "patches/class-transformer@0.5.1.patch"
